   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
   <children>
      <Label text="Add New Video">
         <font>
            <Font name="System Bold" size="18.0" />
         </font>
      </Label>
      <GridPane hgap="10.0" vgap="10.0">
        <columnConstraints>
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="300.0" />
        </columnConstraints>
        <rowConstraints>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
            <Label text="Title" GridPane.rowIndex="0" />
            <TextField fx:id="titleField" GridPane.columnIndex="1" GridPane.rowIndex="0" />
            <Label text="Creator" GridPane.rowIndex="1" />
            <TextField fx:id="creatorField" GridPane.columnIndex="1" GridPane.rowIndex="1" />
            <Label text="Category" GridPane.rowIndex="2" />
            <TextField fx:id="categoryField" GridPane.columnIndex="1" GridPane.rowIndex="2" />
            <Label text="Year" GridPane.rowIndex="3" />
            <TextField fx:id="yearField" GridPane.columnIndex="1" GridPane.rowIndex="3" />
            <Label text="Genre" GridPane.rowIndex="4" />
            <TextField fx:id="genreField" GridPane.columnIndex="1" GridPane.rowIndex="4" />
            <Label text="Duration" GridPane.rowIndex="5" />
            <TextField fx:id="durationField" GridPane.columnIndex="1" GridPane.rowIndex="5" />
            <Label text="Thumbnail" GridPane.rowIndex="6" />
            <HBox alignment="CENTER_LEFT" spacing="10.0" GridPane.columnIndex="1" GridPane.rowIndex="6">
               <children>
                  <Button fx:id="chooseThumbnailButton" mnemonicParsing="false" onAction="#handleChooseThumbnail" text="Choose..." />
                  <Label fx:id="thumbnailPathLabel" text="No file chosen" />
               </children>
            </HBox>
         </children>
      </GridPane>
      <HBox alignment="CENTER_RIGHT" spacing="10.0">
         <children>
            <Label fx:id="messageLabel" textFill="RED" />
            <Button fx:id="saveButton" mnemonicParsing="false" onAction="#handleSave" prefWidth="80.0" text="Save" />
            <Button fx:id="cancelButton" mnemonicParsing="false" onAction="#handleCancel" prefWidth="80.0" text="Cancel" style="-fx-background-color: #DDDDDD;" />
         </children>
      </HBox>
   </children>
