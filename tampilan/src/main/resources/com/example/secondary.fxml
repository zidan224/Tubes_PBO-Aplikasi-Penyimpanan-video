            <Insets left="10.0" right="10.0" />
         </padding>
      </HBox>
   </top>
   <center>
      <ScrollPane fitToWidth="true" hbarPolicy="NEVER" style="-fx-background-color: #F4F4F4;" BorderPane.alignment="CENTER">
         <content>
            <TilePane fx:id="videoGrid" hgap="15.0" prefColumns="4" vgap="15.0">
               <padding>
                  <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
               </padding>
            </TilePane>
         </content>
      </ScrollPane>
   </center>
