            <Button fx:id="myWatchlistButton" mnemonicParsing="false" onAction="#handleMyWatchlist" text="My Watchlist" />
            <Pane HBox.hgrow="ALWAYS" />
            <Button fx:id="addButton" mnemonicParsing="false" onAction="#handleAddVideo" text="Add Video" />
